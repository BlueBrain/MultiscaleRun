if [[ -z "${special_path}" ]]
then
  if [ -d "x86_64" ]
  then
    echo "use custom special"
    special_path=x86_64/special
  else

    special_path=special
  fi
fi

export JULIA_NUM_THREADS=20

echo "special_path="$special_path

time srun dplace $special_path -mpi -python main.py
